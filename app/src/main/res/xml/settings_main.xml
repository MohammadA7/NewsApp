<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">


    <EditTextPreference
        android:defaultValue="@string/settings_news_date_default"
        android:inputType="date"
        android:key="@string/settings_news_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_news_date_label" />
    <ListPreference
        android:defaultValue="@string/settings_news_category_default"
        android:entries="@array/settings_category_labels"
        android:entryValues="@array/settings_category_values"
        android:key="@string/settings_news_category_key"
        android:title="@string/settings_news_category_label" />
</PreferenceScreen>